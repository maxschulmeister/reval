{
  "name": "reval",
  "version": "0.1.0",
  "description": "A benchmark framework for evaluating LLM applications",
  "author": "Max Schulmeister <mail@kmaxschulmeister.com> (https://github.com/maxschulmeister)",
  "license": "MIT",
  "bin": "packages/cli/dist/cli.js",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "reval": "turbo run reval",
    "reval-cli": "cd packages/cli && npm run dev",
    "db-create": "turbo run db-create",
    "db-ui": "turbo run db-ui",
    "ui": "cd packages/ui && npm run dev"
  },
  "devDependencies": {
    "@prisma/client": "6.15.0",
    "glob": "^11.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.15.0",
    "turbo": "^2.5.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@reval/cli": "workspace:*"
  }
}
