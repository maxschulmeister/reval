{
  "name": "@rectangle0/reval",
  "version": "0.1.1",
  "description": "A benchmark framework for evaluating LLM applications",
  "author": "Max Schulmeister <mail@kmaxschulmeister.com> (https://github.com/maxschulmeister)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxschulmeister/reval.git"
  },
  "homepage": "https://github.com/maxschulmeister/reval#readme",
  "bugs": {
    "url": "https://github.com/maxschulmeister/reval/issues"
  },
  "bin": "./packages/cli/dist/cli.js",
  "type": "module",
  "main": "./packages/core/dist/index.js",
  "types": "./packages/core/src/index.ts",
  "exports": {
    ".": {
      "types": "./packages/core/src/index.ts",
      "default": "./packages/core/dist/index.js"
    },
    "./client": {
      "types": "./packages/core/src/client.ts",
      "default": "./packages/core/dist/client.js"
    },
    "./types": {
      "types": "./packages/core/src/types/index.ts",
      "default": "./packages/core/dist/types/index.js"
    }
  },
  "scripts": {
    "build": "npx prisma generate --schema packages/core/reval.prisma && turbo run build",
    "dev": "npx prisma generate --schema packages/core/reval.prisma && turbo run dev",
    "lint": "npx prisma generate --schema packages/core/reval.prisma && turbo run lint",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "packages/core/dist",
    "packages/core/src",
    "packages/core/vite.config.ts",
    "packages/core/sample.json",
    "packages/core/reval.prisma",
    "packages/core/reval.config.ts",
    "packages/cli/dist"
  ],
  "devDependencies": {
    "glob": "^11.0.3",
    "turbo": "^2.5.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "execa": "^9.6.0",
    "fastest-levenshtein": "^1.0.16",
    "ink": "^4.4.1",
    "jiti": "^2.5.1",
    "json-diff-ts": "^4.8.2",
    "nanoid": "^5.1.5",
    "p-queue": "^8.1.0",
    "p-retry": "^7.0.0",
    "pastel": "^3.0.0",
    "prisma": "^6.15.0",
    "react": "^18.2.0",
    "serialize-error": "^12.0.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.22.4"
  }
}
