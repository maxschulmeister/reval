// Prisma schema file for Reval

generator revalClient {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource RevalDb {
  provider = "sqlite"
  url      = "file:../../.reval/reval.db"
}

model Eval {
  id         String      @id
  name       String
  notes      String?
  function   String
  timestamp  DateTime
  runs       Run[]

  @@map("evals")
}

model Run {
  id       String @id
  eval_id   String
  target   Json
  result   Json?
  time     Float
  retries  Int
  score    Json?
  status   Status
  args      Json
  features  Json?
  variants  Json?
  dataIndex Int

  eval  Eval  @relation(fields: [eval_id], references: [id], onDelete: Cascade)

  @@map("runs")
}

enum Status {
  success
  error
}
