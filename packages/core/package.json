{
  "name": "@reval/core",
  "version": "0.1.0",
  "description": "A benchmark framework for evaluating LLM applications",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "reval": "tsx src/run.ts",
    "build": "vite build",
    "dev": "tsx watch src/run.ts",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist .reval",
    "db-ui": "npx drizzle-kit studio",
    "db-create": "rm -rf ../../.reval && npx drizzle-kit generate && npx tsx src/db/index.ts && npx drizzle-kit migrate"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "vite-node": "^1.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "data-forge": "^1.10.4",
    "data-forge-fs": "^0.0.9",
    "drizzle-orm": "^0.44.4",
    "nanoid": "^5.1.5",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1"
  }
}
