{
  "name": "@reval/core",
  "version": "0.1.0",
  "description": "A benchmark framework for evaluating LLM applications",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "reval": "tsx src/api/run.ts",
    "build": "vite build",
    "dev": "tsx watch src/api/run.ts",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist .reval",
    "db:ui": "prisma studio --schema=schema.prisma",
    "db:generate": "prisma generate --schema=schema.prisma",
    "db:push": "prisma db push --schema=schema.prisma"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^20.0.0",
    "@types/p-queue": "^3.2.1",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "vite-node": "^1.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.14.0",
    "data-forge": "^1.10.4",
    "execa": "^9.6.0",
    "nanoid": "^5.1.5",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "prisma": "^6.14.0"
  }
}
