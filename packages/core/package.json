{
  "name": "@reval/core",
  "version": "0.1.0",
  "description": "A benchmark framework for evaluating LLM applications",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "tsx watch src/api/eval.ts",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist .reval"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.1",
    "@types/p-queue": "^3.2.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-node": "^3.2.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "execa": "^9.6.0",
    "fastest-levenshtein": "^1.0.16",
    "jiti": "^2.5.1",
    "json-diff-ts": "^4.8.2",
    "nanoid": "^5.1.5",
    "p-queue": "^8.1.0",
    "p-retry": "^7.0.0",
    "serialize-error": "^12.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
