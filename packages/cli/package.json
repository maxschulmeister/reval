{
  "name": "@reval/cli",
  "version": "0.1.0",
  "description": "CLI for the reval benchmark framework",
  "private": true,
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "reval": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && tsc && chmod +x dist/cli.js",
    "reval": "tsx src/cli.ts",
    "dev": "tsx watch src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@reval/core": "workspace:*",
    "ink": "^4.4.1",
    "pastel": "^3.0.0",
    "react": "^18.2.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
