{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "reval": {
      "dependsOn": ["^build"],
      "outputs": [".reval/**"]
    },
    "db-create": {
      "outputs": [".reval/**"]
    },
    "db-ui": {
      "cache": false,
      "persistent": true
    }
  }
}